a {
	color: #fff;
	text-decoration: none;
}

a:hover {
	text-decoration: underline;
}

body {
	font-family: Gill, Helvetica, sans-serif;
	font-size: 12px;
	color: #fff;

	background-image: url(<%= asset_path 'whitey.png' %>);
	background-color: #fff;
	background-repeat:repeat;
}
hr {
	border: 0 #ccc solid;
	border-top-width: 1px;
	clear: both;
	height: 0;
}
.container {
	padding:none;
	width:1000px;
	margin: 0 auto;
}
#skyline {
	height:100%;
	position: relative;
	margin: 0 auto -4px auto;
	padding: 0 50px 0 0;
}

#gradient {
	background: url(<%= asset_path 'background_grad.png' %>) repeat-x;
	position: relative;
}

.main {
background: url(<%= asset_path 'background.png' %>) repeat top left;
width:960px;
height:100%;
position: relative;
padding: -10px 0 10px 0;
border-bottom-right-radius: 10px;
-moz-border-bottom-right-radius: 10px;
-webkit-border-bottom-right-radius: 10px;
border-bottom-left-radius: 10px;
-moz-border-bottom-left-radius: 10px;
-webkit-border-bottom-left-radius: 10px;
}

.clear {
clear: both;
display: block;
overflow: hidden;
visibility: hidden;
width: 0;
height: 0;
}

/******** INTRO MENU SHIYUT ***********/

.sidebar{
width: 220px;
display: inline;
float: left;
margin-left: 10px;
margin-right: 10px;
}

.box {
background: black;
padding: 10px;
margin-bottom: 1em;
text-align: center;
border-radius: 10px;
-moz-border-radius: 10px;
-webkit-border-radius: 10px;
}

.box p {
margin: 0;
font-family: Core;
font-size: 1.2em;
}

/**********POPUP WINDOW STUFF **************/
.product {
position: absolute;
width: 920px;
height: 560px;
padding: 20px;
display:none;
z-index: 10;
background: url(<%= asset_path 'background.png' %>) repeat top left;
}

.product .close {
position: absolute;
top: 0;
right: 0;
background: url(<%= asset_path 'close.png' %>) no-repeat top right;
cursor: pointer;
height: 40px;
width: 40px;
}

.moreinfo {
position: absolute;
height: auto;
padding: 5px 10px;
top: 70px;
right: 10px;
z-index: 1;
background: #C0C0C0;
cursor: pointer;
border-radius: 10px;
-moz-border-radius: 10px;
-webkit-border-radius: 10px;
}

.moreinfo h1 {
margin: 0;
float:left;
font-size:1.4em;
}

.moreinfo img {
	color: transparent;
	font-size: 0;
	float:left;
	vertical-align: middle;
	border:0;
	margin:0;
	padding:0;
	padding-left:5px;
	-ms-interpolation-mode: bicubic;
}

.product .description {
	width:460px;
	float:left;
	margin-left: 10px;
	margin-right:10px;
}

.product .item {
	float:left;
	width: 380px;
}

.product p {
	font-size:10px;
}